<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="50dp"
            app:cardElevation="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="13dp"
                app:srcCompat="@drawable/baseline_arrow_back_ios_new_24"
                app:tint="#11117F" />
        </androidx.cardview.widget.CardView>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTableName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/kanit_extra_bold"
            android:includeFontPadding="false"
            android:textColor="#11117F"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@id/cardViewBack"
            app:layout_constraintStart_toEndOf="@id/cardViewBack"
            app:layout_constraintTop_toTopOf="@id/cardViewBack" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/kanit_extra_light"
            android:text="Waiter: "
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardViewBack" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvWaiter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/kanit_extra_bold"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@id/tv01"
            app:layout_constraintStart_toEndOf="@id/tv01"
            app:layout_constraintTop_toTopOf="@id/tv01" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/kanit_extra_light"
            android:text="Create at: "
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv01" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvCreateAt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/kanit_extra_bold"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@id/tv02"
            app:layout_constraintStart_toEndOf="@id/tv02"
            app:layout_constraintTop_toTopOf="@id/tv02" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv02">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/kanit_extra_bold"
                android:paddingHorizontal="20dp"
                android:paddingVertical="5dp"
                android:text="+ Order"
                android:textColor="#11117F" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardCopyOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv02">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/kanit_extra_bold"
                android:paddingHorizontal="20dp"
                android:paddingVertical="5dp"
                android:text="Copy Order"
                android:textColor="#11117F" />
        </androidx.cardview.widget.CardView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginVertical="10dp"
            app:layout_constraintBottom_toTopOf="@id/tv03"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardOrder"
            tools:listitem="@layout/item_order_food" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/kanit_extra_light"
            android:text="Total: "
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@id/btnCancel"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTotalAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/kanit_extra_bold"
            android:text="123123"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@id/tv03"
            app:layout_constraintStart_toEndOf="@id/tv03"
            app:layout_constraintTop_toTopOf="@id/tv03" />

        <androidx.cardview.widget.CardView
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            app:cardBackgroundColor="#FC0505"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/kanit_extra_bold"
                android:gravity="center"
                android:includeFontPadding="false"
                android:paddingHorizontal="50dp"
                android:text="cancel"
                android:textAllCaps="true"
                android:textColor="@color/white" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/btnCompleted"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/kanit_extra_bold"
                android:gravity="center"
                android:includeFontPadding="false"
                android:paddingHorizontal="50dp"
                android:text="completed"
                android:textAllCaps="true"
                android:textColor="#11117F" />
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.food.order.utils.widget.FoodOrderLoadingView
        android:id="@+id/loadingView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:elevation="100dp"
        android:focusable="true" />
</FrameLayout>
